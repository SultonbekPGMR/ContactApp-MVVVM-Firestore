<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">

        <shape>

            <corners
                android:radius="24dp"/>

            <stroke
                android:width="1dp"
                android:color="#6603A9F4"/>

            <solid
            android:color="#3303A9F4"/>

        </shape>

    </item>

    <item android:state_pressed="true">

        <shape>

            <corners
                android:radius="16dp"/>

            <stroke
                android:width="1dp"
                android:color="#CC03A9F4"/>

        </shape>

    </item>

    <item>

        <shape>

            <corners
                android:radius="24dp"/>

            <stroke
                android:width="1dp"
                android:color="@color/blue"/>


        </shape>

    </item>


</selector>